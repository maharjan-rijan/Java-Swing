import java.beans.*;
import java.awt.*;
import java.text.*;
import java.util.*;
import javax.swing.*;

class date implements PropertyChangeListener {
	public static void main(String[] args) {
		date DateShow = new date();
		createwindow(DateShow);
	}

	private static void createwindow(date dateShow) {
		JFrame frame = new JFrame("Show Date");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		 createUI(frame, dateShow);
		 frame.setSize(300, 200);
		 frame.setLocationRelativeTo(null);
		 frame.setVisible(true);
	}
	private static void createUI(final JFrame frame, date DateShow) {
		JPanel panel = new JPanel();
		LayoutManager manage = new GridLayout(6, 2);
		panel.setLayout(manage);
		panel.setSize(200, 200);
		panel.setBorder(BorderFactory.createTitledBorder("Date Format"));

	    DateFormat Date_Format = new SimpleDateFormat("dd MMM YYYY");
	    JFormattedTextField Today_Date = new JFormattedTextField(Date_Format);
	    Today_Date.setName("Today");
	    Today_Date.setColumns(10);
	    Today_Date.setEditable(false);
	    JLabel Today_Label = new JLabel("Date:");
	    Today_Label.setLabelFor(Today_Date);
	    Today_Date.setValue(new Date());

	    panel.add(Today_Label);
	    panel.add(Today_Date);
	    JPanel Main_Panel = new JPanel();
	    Main_Panel.add(panel);

	    frame.getContentPane().add(Main_Panel, BorderLayout.CENTER);
	}
	

	@Override
	public void propertyChange(PropertyChangeEvent evt) {
		// TODO Auto-generated method stub
		
	}

}
